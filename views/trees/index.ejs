<% layout("layouts/boilerplate") %>
    <div id="cluster-map"></div>
    <h1>All trees</h1>
    <div>
        <a href="/trees/new">Add Tree</a>
    </div>

    <% for (let tree of trees) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(tree.images.length) { %>
                        <img src="<%= tree.images[0].url %>" alt="" class="img-fluid">
                        <% } else { %>
                            <img src="https://osbornegroupcre.com/wp-content/uploads/2016/02/missing-image-640x360.png"
                                alt="" class="img-fluid">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= tree.name %>
                        </h5>
                        <p class="card-text">
                            <%=tree.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=tree.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/trees/<%= tree._id %>">
                            View <%= tree.name %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
                const trees = { features: <%-JSON.stringify(trees) %>}
            </script>
            <script src="/javascripts/clusterMap.js"></script>