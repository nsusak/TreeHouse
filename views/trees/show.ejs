<% layout("layouts/boilerplate") %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <div class="col-6">
            <div id="treeCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <!-- if there is more images, only first one should have the active class -->
                    <% tree.images.forEach((img, i)=> { %>
                        <div class="carousel-item <%= i === 0 ? " active" : "" %>">
                            <img src="<%=img.url%>" class="d-block w-100" alt="">
                        </div>
                        <% }) %>
                </div>
                <% if(tree.images.length> 1 ) { %>
                    <a class="carousel-control-prev" href="#treeCarousel" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#treeCarousel" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </a>
                    <% } %>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= tree.name %>
                    </h5>
                    <p class="card-text">
                        <%= tree.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= tree.location %>
                    </li>
                    <li class="list-group-item">Submitted by <%= tree.author.username %>
                    </li>
                </ul>
                <% if( currentUser && tree.author.equals(currentUser._id)) { %>
                    <div class="card-body">
                        <a href="/trees/<%= tree._id %>/edit" class="card-link btn btn-info">Edit Tree</a>
                        <form class="d-inline" action="/trees/<%=tree._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>
                        <div class="card-footer text-muted">
                            <a href="/trees" class="card-link">Back to all Trees</a>
                        </div>
            </div>
        </div>
        <div class="col-6">
            <% if(currentUser) { %>
                <h2>Leave a Review</h2>
                <form action="/trees/<%=tree._id%>/reviews" method="POST" class="mb-3 needs-validation" novalidate>
                    <div class="mb-1">
                        <fieldset class="starability-checkmark">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review text</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
                <% } %>
                    <% for (let review of tree.reviews) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=review.author.username %>
                                </h5>
                                <p class="starability-result" data-rating="<%= review.rating %>">
                                    Rated: <%= review.rating %> stars
                                </p>
                                <p class="card-text">
                                    Review: <%= review.body%>
                                </p>
                                <% if(currentUser && review.author.equals(currentUser._id)) { %>
                                    <form action="/trees/<%=tree._id%>/reviews/<%=review._id%>?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>